{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}!{% endblock %}

{% block body %}

<div class="container-login">

<div class="loginBox">
            
            <div class="logo"></div>
            
            <h3>Identifiez-vous</h3> 
            
            {% if error %}
                <p>Erreur lors de la connexion</p>
            {% endif %}

                <form action="{{ path('login') }}" method="post">
                
                <div class="inputbox">
                    <input type="text" placeholder="Nom d'utilisateur" name="_username" value="{{lastUsername}}"/>
                    <span><i class="fa fa-user"></i></span>
                </div>

                <div class="inputbox">
                    <input type="password" placeholder="Mot de passe" name="_password"/>
                    <span><i class="fa fa-lock"></i></span>
                </div>

                
                <div class="inputbox">
                    <input type="submit" value="Login">
                </div>

                <div class="inputbox">
                <p>Vous n'êtes pas inscrit <a href="{{ path('register_student') }}">eleves</a> <a href="{{ path('register_teacher') }}">Prof</a></p>
                </div>

            
            </form>

        </div>
</div>


