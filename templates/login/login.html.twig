{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}



<div class="container-login">

    <!-- Error connect-->
    <div class="loginBox">
    {% if error %}
        <div class="errorLogin">
            <img src="{{ asset('assets/img/bulle.png')}}" alt="bulle d'erreur">
            <div class="text-error">Erreur lors de la connexion</div>
        </div>                
    {% endif %}
            
    <!-- LOGO -->       
    <div class="logo">
        <img src="{{ asset('assets/img/logoSite.png')}}" alt="logo site">
    </div>
            
    <h3>Identifiez-vous</h3> 

    <!--FORMULAIRE DE CONNEXION -->
            
    <form action="{{ path('login') }}" method="post">
                
            <div class="inputbox">
                <input type="text" placeholder="Nom d'utilisateur" name="_username" value="{{lastUsername}}"/>
                <span><i class="fa fa-user"></i></span>
            </div>

            <div class="inputbox">
                <input type="password" placeholder="Mot de passe" name="_password"/>
                <span><i class="fa fa-lock"></i></span>
            </div>

            <div class="inputbox">  
                <input class="btn-general" type="submit" value="Login">
            </div>
            <p class="para">Vous n'Ãªtes pas inscrit? </p>
        </form>

        
        
        <!-- Lien vers formulaire d'inscription -->
        <div class="lien">
                <a href="{{ path('register_student') }}" class="student">eleve </a>
                <a href="{{ path('register_teacher') }}" class="teacher">Prof </a>
        </div>
            
    </div>
</div> 

{% endblock %}
