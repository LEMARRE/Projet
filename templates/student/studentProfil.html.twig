{% extends 'base.html.twig' %}

{% block title %}Profil Eleve - {{ parent() }}!{% endblock %}

{% block body %}

<div class="container-profil">

    <div class="maincontainer">

        <div class="profil-card">
            
            <!-- Head Card -->
            <div class="headcard">
    
                <!--identity-->
                <div class="identity">

                    <div><a href="{{ path('student_home', {id: user.id}) }}"><i class="fa fa-home"></i></a></div>
                        
                    <h2>{{user.firstname | capitalize }}</h2>
                    
                    {# class num   #}
                    <div class="NumClassRoom">
                    {% for infos in classroom %}
                        <h3>{{infos.name}}</h3>
                    {% endfor %}  
                    </div>
                </div>

                <div class="avatar">
                        <img src="{{ asset('assets/img/' ~ avatar.imageUrl)}}" alt="Avatar">
                    </div>
                <!--Affichage du score-->
                    {% if user.experience == 0%}
                    <div class="scoring">
                        <h3> 0 point</h3>
                        {# <div class="progress-bar">
                        <span style="width:60%"></span>
                        </div> #}
                    </div>

                    {% else %}
                    <div class="scoring">
                        <h3> {{user.experience}} points</h3>
                    </div>

                    {% endif %}
                </div>
    
                <!-- Nom de la classe -->
                {% for infos in classroom %}
                <tbody>
                    <tr>
                    <th scope="row">{{ infos.name }}</th>
                    <tr>
                <tbody>
                {% endfor %}  
            
            <div class="bodycard">

                <div class="pictQcm">
                    <img src="{{ asset('assets/img/logoQuizz.png')}}" alt="Avatar">
                </div> 
            
                <div class="content-jeux-open">
                    <h2>Jeux à faire</h2>
    
                    <div class="slide-jeu">

                        {% for i in 0..3 %}
                
                        <div class="box ">
                            <div class="imgBox">
                                <img src="{{ asset('assets/img/math.png')}}" alt="Logo geographie">
                            </div>
                            
                            <div class="details">
                                <div class="content">
                                <h2>QCM Geo</h2>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do </p>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                            
            
                    </div>

        
                {# </div> #}

                <a class="nav-link btndeconnect" href="{{ path("logout") }}">Déconnexion</a>

            <!-- jeux finis-->

            </div>     
        
{% endblock %}
        
    {% block javascripts %}
    


        <script>
            $(document).ready(function(){
    
            $('.slide.jeu').slick({
                infinite: true,
                slidesToShow: 4,
                slidesToScroll: 6
            });
        });
        </script>

    

{% endblock %}