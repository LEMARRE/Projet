<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Collego{% endblock %}</title>

        <meta name="viewport" content="width=device-width">
    
        {% block stylesheets %}

        <!-- Import Fonts-->
        <link href="https://fonts.googleapis.com/css?family=Oswald:600,700|Roboto:400,500" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=PT+Sans:400,700,700i" rel="stylesheet">
        
        <!-- import Fontawesome -->

        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.0/css/all.css">

        <!-- Import Bootstrap-->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        

        <!-- Import feuille de style-->
        <link rel="stylesheet" href="{{asset('assets/slick/slick-theme.css')}}">
        <link rel="stylesheet" href="{{asset('assets/slick/slick.css')}}">
        <link rel="stylesheet" href="{{asset('assets/css/style.css')}}">
        
        
        {% endblock %}
    
    </head>
    <body>
        {% block header %}
            {% for message in app.flashes('notice') %}
            <span class="flash-notice">
                {{ message }}
            </span>
            {% endfor %}
        {% endblock %}

        {% block body %}{% endblock %}
        
        <!-- Import JS-->
        
        <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        
        
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
